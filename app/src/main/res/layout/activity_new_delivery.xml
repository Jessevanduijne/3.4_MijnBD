<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/toolbar_height">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_car_w"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="50dp"/>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_gray_section"
                    android:layout_marginStart="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_arrival_client"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-8dp">
                        <TextView
                            android:id="@+id/expected_arrival_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_time"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_h1"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_arrival_expected"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-10dp">
                        <TextView
                            android:id="@+id/maximum_arrival_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_time"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_h1"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_arrival_max"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_arrival_duration"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-10dp">

                        <TextView
                            android:id="@+id/expected_arrival_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_minutes"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_h1"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_minutes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:contentDescription="@string/lbl_expected_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_warehouse_w"/>

                    <ImageView
                        android:contentDescription="@string/lbl_expected_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_arrowdown"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:contentDescription="@string/lbl_arrival_client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_destination"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <!-- To warehouse: -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/expected_time_to_warehouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_minutes"
                            android:textSize="@dimen/text_size_h3"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_minutes"
                            android:textSize="@dimen/text_size_h3"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_expected_duration"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:layout_marginTop="-0dp"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/warehouse_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_address"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/warehouse_zip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_zip"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>


                    <!-- To client: -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/expected_time_to_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_minutes"
                            android:textSize="@dimen/text_size_h3"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_minutes"
                            android:textSize="@dimen/text_size_h3"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_expected_duration"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/client_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_address"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/client_zip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_zip"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text_smaller"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:max="200"
                    android:progress="10"
                    android:progressDrawable="@drawable/progressbar_time_progress"
                    android:rotation="180"
                    android:background="@drawable/progressbar_time_background"
                    android:layout_marginTop="-30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:id="@+id/minutes_to_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_h2"
                            android:textColor="@color/white"
                            android:text="@string/dummy_minutes"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_minutes_short"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_h2"
                            android:paddingStart="5dp"
                            android:paddingEnd="0dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_text"
                        android:textColor="@color/white"
                        android:text="@string/lbl_to_accept"
                        android:layout_marginTop="-5dp"/>
                </LinearLayout>
                <ImageView
                    android:contentDescription="@string/dummy_description"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="115dp"
                    android:layout_marginStart="80dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_decline_delivery"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/ic_cancel_white"
                        android:layout_marginTop="120dp"
                        android:layout_marginStart="30dp"/>

                    <Button
                        android:id="@+id/btn_accept_delivery"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/ic_check_yellow"
                        android:layout_marginTop="120dp"
                        android:layout_marginStart="90dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

<include layout="@layout/toolbar" />
<include layout="@layout/bottom_bar"/>

</RelativeLayout>