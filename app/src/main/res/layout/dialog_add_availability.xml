<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorPrimaryDark"
    android:background="@color/darkGray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add availability"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorAccent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Day"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:text="Hour"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Day"
                android:layout_weight="1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
        <NumberPicker
            android:id="@+id/pkr_date"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:theme="@style/myBD.NumberPicker"
            android:layout_height="wrap_content" />
        <NumberPicker
            android:id="@+id/pkr_hour"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:theme="@style/myBD.NumberPicker"
            android:layout_height="wrap_content" />
        <NumberPicker
            android:id="@+id/pkr_min"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:theme="@style/myBD.NumberPicker"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <Button
                android:id="@+id/btn_confirmAvailability"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:text="Confirm"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/btn_closeAddAvailability"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:text="Cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>