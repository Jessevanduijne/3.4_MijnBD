<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/spinner"/>

    <TextView
        android:id="@+id/lbl_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_delivery_successful"
        android:textSize="@dimen/text_size_h2"
        android:textColor="@color/lightgreen"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lbl_successful_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_h3"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_gray_section"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_euro_y"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_earnings"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_euro"
                        android:textSize="@dimen/text_size_text" />
                    <TextView
                        android:id="@+id/lbl_success_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/lbl_delivery"
                            android:textSize="@dimen/text_size_text"
                            />
                        <TextView
                            android:id="@+id/lbl_success_vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_gray_section"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_trending_up_black_24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_total_earnings"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_euro"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"/>
                    <TextView
                        android:id="@+id/lbl_success_total_earnings_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_today"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_euro"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"/>
                    <TextView
                        android:id="@+id/lbl_success_total_earnings_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_week"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_euro"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"/>
                    <TextView
                        android:id="@+id/lbl_success_total_earnings_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/lbl_month"
                        android:textSize="@dimen/text_size_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_check_details"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_gray_gold_corners"
            android:text="@string/lbl_check_details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_details"
            android:paddingTop="20dip"
            android:paddingBottom="20dip" />
        <Button
            android:id="@+id/btn_new_assignment"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_gray_gold_corners"
            android:text="@string/lbl_new_assignment"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:drawableTop="@drawable/ic_new_assignment"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"/>
    </LinearLayout>




</LinearLayout>